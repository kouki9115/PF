
<div class ="mt-5 ml-5">
  <h1 class ="mb-3">プロフィール編集</h1>

   <%= form_with model: @user,local:true do |f| %>
    <h4>プロフィール画像</h4>
   <%= f.attachment_field :profile_image %>
    <h4>名前</h4>
   <%=f.text_field :name %>
    <h4>紹介</h4>
   <%=f.text_area :introduction, size: "35x5"%><br>

   <%=f.submit "Update"%>
   <% end %>
</div>
