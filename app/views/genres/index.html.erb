
<div class ="mt-5 ml-5">
 <h1>ジャンル一覧</h1>

   <%=form_with model: @genre, local:true do |f| %>
   <%=f.text_field :name %>
   <%=f.submit "追加" %>
   <% end %>

  <div class ="mt-3">
   <% @genres.each do |genre| %>
    <h6><%= genre.name %>
       <%=link_to "編集", edit_genre_path(genre) %>
       <%=link_to "削除", genre_path(genre), method: :delete %>
    </h6>
   <% end %>
  </div>

 </div>