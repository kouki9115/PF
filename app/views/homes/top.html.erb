<main>

 <div class="containar-fluid">
  <div class="row">

   <div class="bxslider mt-5">
    <%= image_tag 'gift.jpg', width:"100%",height:"400" %>
    <%= image_tag 'gift-2.jpg', width:"100%",height:"400" %>
    <%= image_tag 'gift-box.jpg',width:"100%",height:"400" %>
    <%= image_tag 'box.jpg', width:"100%",height:"400" %>

   </div>

  </div>

 </div>

  <div class="row mt-5 ml-5">
   <% @blogs.each do |blog| %>
    <div class="col-auto">
     <p><%= link_to blog_path(blog) do %>
       <%=attachment_image_tag blog, :image, :fill, 180, 140, format: 'jpeg', fallback: "no_image.png", size:'180x140'  %>
       <% end %></p>

    <div class="row">
    <div class="col-12">
     <%=blog.name %><br>
     <%=blog.genre.name %><br>
     <%=blog.price %></p>
    </div>
   </div>

   </div>
   <% end %>
  </div>
<%= paginate @blogs %>


  <div class="row">
   <%= image_tag "milky-way.jpg",width:"100%",height:"200" %>
    <%#<div class="card-img-overlay">%>
     <h1></h1>
　    <p2></p2>
　    <p><%#=link_to "for you", blogs_path %></p>
　</div>


 </div>
</main>

