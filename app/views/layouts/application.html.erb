<!DOCTYPE html>
<html>
  <head>
    <title>for you</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>


    <link rel="stylesheet" href="https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.min.js"></script>

  </head>

  <body>
   <%#<font face="cursive">　font悩み中%>
   <font face="Yu Gothic">
    <header>
     <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
       <a class="navbar-brand" href="/"><span>for you</span></a>
        <ul class="navbar-nav ml-auto">
         <% if user_signed_in? %>
          <li><%= link_to "Home", root_path,class: 'fas fa-home nav-link text-light' %></li>
          <li><%= link_to "Users",users_path,class: 'fas fa-users nav-link text-light' %></li>
          <li><%= link_to "Blogs",blogs_path ,class: 'fas fa-book-open nav-link text-light'%></li>
          <li><%= link_to "logout", destroy_user_session_path, method: :delete,class: 'fas fa-sign-out-alt nav-link text-light'%></li>
         <% else %>
          <li><%= link_to "Home",root_path,class: 'fas fa-home nav-link text-light' %></li>
          <li><%= link_to "About", homes_about_path,class: 'fas fa-home nav-link text-light'%></li>
          <li><%= link_to "Signup", new_user_registration_path,class: 'fas fa-user-plus nav-link text-light' %></li>
          <li> <%= link_to "login", new_user_session_path,class: 'fas fa-sign-in-alt nav-link text-light' %></li>
         <% end %>
        </ul>
       </div>
      </div>
     </nav>
    </header>

    <%= yield %>

    <footer>
     <div class='container mt-5'>
      <div class='row'>
       <div class='mx-auto'>
        <p>@for you.inc</p>
       </div>
      </div>
     </div>
    </footer>

   </font>
  </body>
</html>
