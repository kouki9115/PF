<main><h1>Blogs#index</h1>
<p>Find me in app/views/blogs/index.html.erb</p>

<h1>検索</h1>
<%= search_form_for @q, url: search_blogs_path do |f| %>
  <%= f.label :name_or_price_or_title_cont, '検索' %>
  <%= f.search_field :name_or_price_or_title_cont %>
  <br>
  <%= f.submit '検索' %>
<% end %>

<p><%=link_to "blog#new", new_blog_path %></p>

<% @blogs.each do |blog| %>

 <%=attachment_image_tag blog, :image, :fill, 100, 100, format: 'jpeg' %>
  <% if blog.favorited_by?(current_user) %>
    <%= link_to blog_favorites_path(blog), method: :delete do %>
      ♥<%= blog.favorites.count %> いいね
       <% end %>

  <% else %>
    <%= link_to blog_favorites_path(blog), method: :post do %>
        ♡<%= blog.favorites.count %> いいね
       <% end %>

  <% end %>
 <p4><%=blog.name %></p4>
 <p4><%=blog.price %></p4>
 <p4><%=blog.title %></p4>
 <p4><%=blog.body %></p4>
 <p4><%=blog.genre.name %></p4>
 <p4><%= link_to "詳細", blog_path(blog) %>
 <%= link_to "削除", blog_path(blog), method: :delete%></p4>
<% end %>

</main>