<main>
 <div class="containar-fluid">
  <div class="row">
   <div class ="col-lg-5 mt-5 ml-5">
    <p4><%=attachment_image_tag @blog, :image, :fill, 480, 360, format: 'jpeg' %></p4>
   </div>
   <div class ="col-lg-5 mt-5 ml-5">
    <h2><%=@blog.scene %></h2>
    <h2><%=@blog.partner %></h2>
    <h2><%=@blog.genre.name %></h2>
    <h2><%=@blog.name %></h2>
    <h2><%=@blog.price %></h2>
    <h2>♥<%=@blog.favorites.count %></h2>

    <h4><%= link_to "編集", edit_blog_path(@blog) %>
    <%= link_to "削除", blog_path(@blog), method: :delete%></h4>
   </div>
  </div>

  <div class ="mt-5 ml-5">
  <h2><%=attachment_image_tag @blog.user, :profile_image, :fill, 100, 100, format: 'jpeg' %>
      <%=@blog.user.name %>
  </h2>
  <h2 class="mt-5"><%=@blog.title %></h2>
  <p class="mt-3"><%=@blog.body %></p>
  </div>

  <div class="comments mt-5 ml-5">
   <p>コメント件数：<%= @blog.blog_comments.count %></p>
    <% @blog.blog_comments.each do |blog_comment| %>
    <%= blog_comment.user.name %>
    <%= blog_comment.created_at.strftime('%Y/%m/%d') %><%= blog_comment.comment %>
    <% if blog_comment.user == current_user %>
     <div class="comment-delete">
      <%= link_to "削除", blog_blog_comment_path(blog_comment.blog, blog_comment), method: :delete %>
     </div>
    <% end %>
    <% end %>
   </div>

   <div class="new-comment mt-1 ml-5">
    <%= form_with(model:[@blog, @blog_comment], local: true) do |f| %>
    <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
    <% end %>
   </div>

  <%= render "index" , blogs: @blogs %>
 </div>
</main>