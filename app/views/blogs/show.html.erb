<main>
 <div class="containar-fluid">
  <div class="row">
   <div class ="col-lg-6">
    <p4><%=attachment_image_tag @blog, :image, :fill, 480, 360, format: 'jpeg' %></p4>
   </div>
   <div class ="col-lg-6">
    <h2><%=@blog.scene %></h2>
    <h2><%=@blog.partner %></h2>
    <h2><%=@blog.genre.name %></h2>
    <h2><%=@blog.name %></h2>
    <h2><%=@blog.price %></h2>
    <h2>♥<%=@blog.favorites.count %></h2>

    <h4><%= link_to "編集", edit_blog_path(@blog) %>
    <%= link_to "削除", blog_path(@blog), method: :delete%></h4>
   </div>
  </div>

  <h2><%=@blog.user.name %></h2>
  <h2><%=@blog.title %></h2>
  <p><%=@blog.body %></p>


  <div class="comments">
   <p>コメント件数：<%= @blog.blog_comments.count %></p>
    <% @blog.blog_comments.each do |blog_comment| %>
    <%= blog_comment.user.name %>
    <%= blog_comment.created_at.strftime('%Y/%m/%d') %><%= blog_comment.comment %>
    <% if blog_comment.user == current_user %>
     <div class="comment-delete">
      <%= link_to "削除", blog_blog_comment_path(blog_comment.blog, blog_comment), method: :delete %>
     </div>
    <% end %>
    <% end %>
   </div>

   <div class="new-comment">
    <%= form_with(model:[@blog, @blog_comment], local: true) do |f| %>
    <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
    <% end %>
   </div>

   <div class="row">
    <% @blogs.each do |blog| %>
   <div class="col-auto">
    <p><%= link_to blog_path(blog) do %>
       <%=attachment_image_tag blog, :image, :fill, 180, 140, format: 'jpeg' %>
       <% end %></p>

   <div class="row">
    <div class="col-8">
     <%=blog.name %><br>
     <%=blog.genre.name %><br>
     <%=blog.price %></p>
    </div>
   <div class="col-4">
    <p><% if blog.favorited_by?(current_user) %>
        <%= link_to blog_favorites_path(blog), method: :delete do %>
         ♥<%= blog.favorites.count %>
       <% end %>
       <% else %>
        <%= link_to blog_favorites_path(blog), method: :post do %>
          ♡<%= blog.favorites.count %>
        <% end %>
       <% end %>
    </p>
   </div>
  </div>

   <%#= link_to "削除", blog_path(blog), method: :delete%>
   </div>
   <% end %>
  </div>
  </div>
 </div>
</main>