<main>
 <div class="containar-fluid">
  <div class="row">
   <div class ="col-lg-5 mt-5 ml-5">
    <p4><%=attachment_image_tag @user, :profile_image, :fill, 480, 360, format: 'jpeg' %></p4>
   </div>
   <div class ="col-lg-5 mt-5 ml-5">
    <h2><%=@user.name %></h2>
    <h2><%=@user.introduction %></h2>

    <h4><%= link_to "編集", edit_user_path(@user) %>
    <%= link_to "削除", user_path(@user), method: :delete%></h4>
   </div>
  </div>

    <div class="row mt-5 ml-5">
    <% @users.each do |user| %>
   <div class="col-auto">
    <p><%= link_to user_path(user) do %>
       <%=attachment_profile_image_tag user, :profile_image, :fill, 180, 140, format: 'jpeg' %>
       <% end %></p>

   <div class="row">
    <div class="col-8">
     <%=user.name %><br>
     <%=user.genre.name %><br>
     <%=user.price %></p>
    </div>
   <div class="col-4">
    <p><% if user.favorited_by?(current_user) %>
        <%= link_to user_favorites_path(user), method: :delete do %>
         ♥<%= user.favorites.count %>
       <% end %>
       <% else %>
        <%= link_to user_favorites_path(user), method: :post do %>
          ♡<%= user.favorites.count %>
        <% end %>
       <% end %>
    </p>
   </div>
  </div>

   <%#= link_to "削除", user_path(user), method: :delete%>
   </div>
   <% end %>
  </div>
  </div>
</main>